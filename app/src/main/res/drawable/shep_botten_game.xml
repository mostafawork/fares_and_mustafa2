<?xml version="1.0" encoding="utf-8"?>
<shape android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">
    <corners
        android:radius="10dp"
        />
    <gradient
        android:angle="45"
        android:centerX="60%"
        android:centerColor="#00E676"
        android:startColor="#1DE9B6"
        android:endColor="#76A2A8"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="200dp"
        android:height="50dp"
        />
    <stroke
        android:width="2dp"
        android:color="#FFFFFF"
        />
</shape>