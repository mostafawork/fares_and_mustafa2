<?xml version="1.0" encoding="utf-8"?>
<shape android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">
    <corners
        android:radius="5dp"
        />
    <gradient
        android:angle="45"
        android:centerX="50%"
        android:centerColor="#00E5FF"
        android:startColor="#00FFCC"
        android:endColor="#00FFB7"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="200dp"
        android:height="50dp"
        />
    <stroke
        android:width="1dp"
        android:color="#FFFFFF"
        />
</shape>